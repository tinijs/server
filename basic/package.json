{
  "name": "@tinijs/server-basic",
  "version": "0.0.1",
  "description": "A basic file-based content system.",
  "author": "Lam Nhan",
  "homepage": "https://server.tinijs.dev",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "src/public-api.js",
  "types": "src/public-api.d.ts",
  "files": [
    "src",
    "!**/*.ts",
    "**/*.d.ts",
    "11ty",
    "assets"
  ],
  "tiniServer": {
    "copy": {
      "assets": "content"
    },
    "scripts": {
      "content:build": "tini server build basic"
    },
    "buildCommand": "content:build"
  },
  "scripts": {
    "build": "tsc",
    "lint": "gts lint",
    "fix": "gts fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinijs/server.git"
  },
  "bugs": {
    "url": "https://github.com/tinijs/server/issues"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.8",
    "@11ty/eleventy-plugin-bundle": "^1.0.5",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@iarna/toml": "^2.2.5",
    "markdown-it-anchor": "^8.6.7",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.9.4",
    "gts": "^5.2.0",
    "typescript": "~5.3.2"
  }
}
